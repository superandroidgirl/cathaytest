<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF">
    <android.support.constraint.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFF">

        <ImageView
                android:layout_width="0dp"
                android:layout_height="226dp"
                android:id="@+id/info_img"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:scaleType="fitXY"
                app:layout_constraintDimensionRatio="w,1.87:1"/>
        <TextView
                android:text="info_textinfo_textinfo_textinfo_textinfo_textinfo_textinfo_textinfo_textinfo_textinfo_textinfo_textinfo_textinfo_textinfo_textinfo_textinfo_textinfo_textinfo_textinfo_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/info_text" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/info_img" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.0"
                android:textSize="14sp"
                android:textColor="#000"/>
        <TextView
                android:text="memo_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/memo_text" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/info_text"
                app:layout_constraintStart_toStartOf="@+id/info_text" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"
                android:textSize="14sp"
                android:textColor="#000"/>
        <TextView
                android:text="category_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/category_text"
                app:layout_constraintTop_toBottomOf="@+id/memo_text"
                app:layout_constraintStart_toStartOf="@+id/memo_text"
                android:textSize="14sp"
                android:textColor="#000" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/open_in_webview" app:layout_constraintHorizontal_bias="0.0"/>
        <TextView
                android:text="在網頁開啟"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/open_in_webview"
                app:layout_constraintTop_toBottomOf="@+id/memo_text" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/category_text" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:textSize="14sp"
                android:textColor="#00BBFF"/>
        <View
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:id="@+id/view3" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/category_text"
                android:background="#DDDDDD"
                />
        <TextView
                android:text="植物資料"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/planet_title"
                android:textColor="#000"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/view3" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.0"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/planet_list_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/planet_title"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
        <android.support.constraint.Group
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/planet_list_group"
                app:constraint_referenced_ids="planet_title,view3,planet_list_recyclerview"
                android:visibility="gone"/>

        <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>